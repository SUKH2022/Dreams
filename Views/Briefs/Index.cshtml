@* Brief of the company *@
<h1 class="title-font primary-color my-3 py-3">About Us</h1>
<section>
    <h2 class="subtitle-font secondary-color py-3">Company Info</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Company Name</th>
                <th>Description</th>
                <th>Group members & roles</th>
            </tr>
        </thead>
        @* traversing the loop *@
        <tbody>
            @foreach(var Brief in Model){
                <tr>
                    <td>@Brief["Id"]</td>
                    <td>@Brief["Company Name"]</td>
                    <td>@Brief["Description"]</td>
                    <td>@Brief["Group members & roles"]</td>
                </tr>
            }
        </tbody>
    </table>
</section>

@* Another section for the proposal *@
<section>
    <h3 class="subtitle-font secondary-color my-3">Proposal</h3>
    <p>
        <em>Description of the Site:</em> @(((dynamic)ViewData["ProposalData"]).description)
    </p>
    <p>
        <em>Products or Services:</em> @(((dynamic)ViewData["ProposalData"]).ProductsOrServices)
    </p>
    <p>
        <em>Industry Need:</em> @(((dynamic)ViewData["ProposalData"]).IndustryNeed)
    </p>
    <p>
        <em>User Roles:</em> @(((dynamic)ViewData["ProposalData"]).UserRoles)
    </p>
</section>
